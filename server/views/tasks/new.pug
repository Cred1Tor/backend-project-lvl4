extends ../layouts/application.pug

block header
  = t('views.tasks.new.creating')

block content
  +formFor()(action=route('tasks') method='post')
    +input(task, 'name', t('views.tasks.new.name'), errors)(type="text")
    +textArea(task, 'description', t('views.tasks.new.description'), errors)(type="text")
    +select(task, 'statusId', statuses, t('views.tasks.edit.status'), errors)
    +select(task, 'executorId', users, t('views.tasks.edit.executor'), errors)
    +selectMultiple(task, 'labels', labels, t('views.tasks.edit.labels'), errors)
    +submit(task)(value=t('views.tasks.new.submit'))
